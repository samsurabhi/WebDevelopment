<% include ../partials/header.ejs %>

<div class="container width40">
	<h2>Login</h2>
	<form method="POST">
		<div class="form-group">
			<label>Username</label>
			<input class="form-control" type="text" name="username" placeholder="Please enter your user name" >
		</div>	
		<div class="form-group">
			<label>Password</label>
			<input class="form-control" type="password" name="password" placeholder="Please enter your password" >
		</div>	
		<input class="btn btn-primary btn-sm btn-block" type="submit" value="Submit">
	</form>
	<a href="/forgot">Forgot password?</a>
</div>
