<% include ../partials/header.ejs %>

<div class="container width40">
	<h2>Register</h2>
	<form method="POST">
		<div class="form-group">
			<label>Username</label>
			<input class="form-control" type="text" name="username" placeholder="Please enter user name" >
		</div>	
		<div class="form-group">
			<label>Email</label>
			<input class="form-control" type="email" name="email" placeholder="Please enter email id" >
		</div>	
		<div class="form-group">
			<label>Password</label>
			<input class="form-control" type="password" name="password" placeholder="Please create password" >
		</div>	
		<div class="form-group">
			<label>Hobbies</label>
			<input class="form-control" type="text" name="hobbies"  >
		</div>	
		<div class="container width100" style="padding-left:0; padding-right:0">
		<div class="row">
			<input class="btn btn-primary btn-sm  col-md-4 col-xs-4" type="submit" value="Submit">
			<input class="btn btn-info btn-sm  col-md-4 col-xs-4" type="reset" value="Reset">
			<a class= "btn btn-warning btn-sm  col-md-4 col-xs-4" href="/campgrounds">Cancel</a>
		</div>
		</div>
	</form>
</div>
<br><br>

