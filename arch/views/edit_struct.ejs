<!-- TO EDIT STRUCT -->
<% include templates/header %>

<div class= container>
	<div class="jumbotron">
		<h1>Edit Structure :<strong><%=editMe.name%></strong></h1>
	</div>
<div>


<div class="container">
	<form  action="/index/<%=editMe._id%>/edit_struct?_method=PUT" method="POST">
		
		<div class="form-group">
			<label>Category:</label>
			<input disabled class="form-control" type="text" name="struct[category]" value="<%=editMe.category%>">
		</div>
		<div class="form-group">
			<label>Struct Name</label>
			<input class="form-control" type ="text" name="struct[name]" value="<%=editMe.name%>">	
		</div>
		<div class="form-group">
			<label>Location</label>
			<input class="form-control" type ="text" name="struct[location]" value="<%=editMe.location%>">
		</div>
		<div class="form-group">
			<label>Images</label>
			<input class="form-control" type ="text" name="struct[images]" value="<%=editMe.images%>">	
		</div>
		<div class="form-group">
			<label>Type of Architecture </label>
			<input class="form-control" type ="text" name="struct[arch_type]" value="<%=editMe.arch_type%>">
		</div>
		<div class="form-group">
			<label>Buit-in </label>
			<input class="form-control" type ="text" name="struct[builtIn]" value="<%=editMe.builtIn%>">	
		</div>
		<div class="form-group">
			<label>speciality</label>
			<input class="form-control" type ="text" name="struct[speciality]" value="<%=editMe.speciality%>">
		</div>
		<div class="form-group">
			<label>Main Festival </label>
			<input class="form-control" type ="text" name="struct[mainFestival]" value="<%=editMe.mainFestival%>">			
		</div>
	<button class="mybtn" type="submit">Submit</button>
	<button class="mybtn" type="reset">Reset</button>
	<a class="align-bottom " href="/index/<%=editMe._id%>/show_struct">
		<button class="mybtn" >Back</button>
	</a>
	</form>

</div>
<% include templates/footer %>