<!-- TO ADD NEW TEMPLE INTO CATEGORY-->
<% include templates/header %>

<div class= container>
	<div class="jumbotron">
		<h1>Add New Temple</h1>
	</div>
<div>


<div class="container">
	<form  action="/index/new_temple" method="POST">
		<label>Select Category</label>
		<select name="temple[category]">
			<% categories.forEach(function(cate){ %>
				<option><%= cate.cateName %></option>
			<%})%>
			
		</select>
		<div class="form-group">
			<label>Temple Name</label>
			<input class="form-control" type ="text" name="temple[name]">	
		</div>
		<div class="form-group">
			<label>Location</label>
			<input class="form-control" type ="text" name="temple[location]">
		</div>
		<div class="form-group">
			<label>Images</label>
			<input class="form-control" type ="text" name="temple[images]">	
		</div>
		<div class="form-group">
			<label>Type of Architecture </label>
			<input class="form-control" type ="text" name="temple[arch_type]">
		</div>
		<div class="form-group">
			<label>Buit-in </label>
			<input class="form-control" type ="text" name="temple[builtIn]">	
		</div>
		<div class="form-group">
			<label>Speciality</label>
			<input class="form-control" type ="text" name="temple[speciality]">
		</div>
		<div class="form-group">
			<label>Main Festival </label>
			<input class="form-control" type ="text" name="temple[mainFestival]">			
		</div>
	<button class="btn mybtn">Submit</button>
	<button class="btn mybtn">Reset</button>
	</form>
</div>
<% include templates/footer %>